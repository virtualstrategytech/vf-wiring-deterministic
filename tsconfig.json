{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "checkJs": false,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "baseUrl": ".",
    "types": []
  },
  "include": ["scripts/**/*", "tests/**/*", "novain-platform/**/*", "**/*.{ts,tsx,js,jsx}"],
  "exclude": ["node_modules", "dist", ".git"]
}
